# BetterStack API Token (required)
# Get it from: https://uptime.betterstack.com/team/settings/api-tokens
BETTERSTACK_API_TOKEN=your_betterstack_api_token_here

# BetterStack Team ID (optional - for direct links to BetterStack)
# Find it in your BetterStack URL: https://uptime.betterstack.com/team/YOUR_TEAM_ID/...
BETTERSTACK_TEAM_ID=

# Authentication credentials (required)
AUTH_USERNAME=admin
AUTH_PASSWORD=your_secure_password_here

# Session secret (required for production - use a random string)
SESSION_SECRET=your_random_session_secret_here

# URL patterns for categorization (optional, comma-separated)
# Monitors matching these patterns will be categorized as Production/Staging
PRODUCTION_URL_PATTERNS=
STAGING_URL_PATTERNS=

# Server port (optional, default: 3000)
PORT=3000

# Set to 'production' when deploying
NODE_ENV=production
